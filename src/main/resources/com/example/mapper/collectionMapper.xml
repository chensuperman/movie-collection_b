<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.collectionMapper" >


    <select id="getCollectionList" resultType="com.example.pojo.movie">
        select t3.*
        from user_movie t1
        join user_information t2 on t1.user_id = t2.user_id
        join movies t3 on t1.movie_id = t3.movie_id
        where t1.user_id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item.userId}
        </foreach>
        and t1.movie_id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item.movieId}
        </foreach>
    </select>
</mapper>